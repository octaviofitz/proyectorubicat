<!-- Mostrar y ocultar producto -->
<script>
    function mostrar() {
      document.getElementById('productoLavanda').style.display = 'block'
      document.getElementById('productoClassic').style.display = 'none';
      document.getElementById('lavandaRadio').style.fontSize = '5rem';
    }
    function ocultar() {
      document.getElementById('productoLavanda').style.display = 'none';
      document.getElementById('productoClassic').style.display = 'block';
    }
    
  </script>