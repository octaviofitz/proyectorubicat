<script>
  document.addEventListener('DOMContentLoaded', () => {
    const section  = document.getElementById('cardsSection');
    const viewport = document.querySelector('.cards-viewport');
    const cards    = Array.from(document.querySelectorAll('#cardsSection .card'));
    if (!section || !viewport || cards.length === 0) return;
  
    // ====== Detección MOBILE: usar sólo CSS scroll-snap, sin JS pesado ======
    const isMobile = window.matchMedia('(max-width: 768px)').matches 
                     || (navigator.maxTouchPoints > 0 && window.innerWidth < 900);
  
    // Ayuda opcional para mobile: marcar la card "más centrada" (clase sólo estética)
    if (isMobile) {
      // IO barato para añadir/quitar .is-near-center
      const io = new IntersectionObserver((entries) => {
        let best = null, bestRatio = 0;
        entries.forEach(en => {
          if (en.intersectionRatio > bestRatio) { best = en.target; bestRatio = en.intersectionRatio; }
        });
        if (!best) return;
        cards.forEach(c => c.classList.remove('is-near-center'));
        best.classList.add('is-near-center');
      }, { threshold: [0.25, 0.5, 0.75, 1.0] });
      cards.forEach(c => io.observe(c));
      // No scene logic
      return;
    }
  
    // ====== DESKTOP “scene” ======
    section.style.setProperty('--cards', String(cards.length));
  
    // Parámetros “feel” (GPU-friendly)
    const SPREAD_X = 0.28;   // separación horizontal por “paso”
    const SCALE_MIN = 0.94;  // escala mínima fuera de foco
    const PAGE_LEAVE_MS = 520;
  
    // Estado
    let ticking = false;
    let lastNearest = 0;
    const animatingCards = new Set();
  
    // Cache de métricas para evitar reflows en cada frame
    let sectionTopAbs = 0;
    let vh = window.innerHeight || document.documentElement.clientHeight;
    let vw = window.innerWidth || document.documentElement.clientWidth;
  
    function updateMetrics(){
      // Obtener posición absoluta del inicio de la sección una sola vez (o en resize)
      const rect = section.getBoundingClientRect();
      sectionTopAbs = window.scrollY + rect.top;
      vh = window.innerHeight || document.documentElement.clientHeight;
      vw = window.innerWidth || document.documentElement.clientWidth;
    }
    updateMetrics();
  
    function clamp(v,min,max){ return Math.max(min, Math.min(max, v)); }
  
    function getLocalT(scrollY){
      // Progreso 0 .. (N-1) sin leer rect en cada frame
      const yCenter = scrollY + vh/2;
      const rel = clamp(yCenter - sectionTopAbs, 0, (cards.length*vh) - 1);
      return clamp(rel / vh, 0, cards.length - 1);
    }
  
    function pageLeaveLeft(card){
      if (!card || animatingCards.has(card)) return;
      animatingCards.add(card);
      card.style.transition = `transform ${PAGE_LEAVE_MS}ms cubic-bezier(.22,.75,.25,1)`;
      // Empuja a la izquierda, leve giro y scale
      requestAnimationFrame(() => {
        card.style.transform = 'translate3d(-50%, -50%, 0) translate3d(-140vw, 0, 0) rotate(-6deg) scale(0.9)';
      });
      setTimeout(() => {
        card.style.transition = '';
        animatingCards.delete(card);
      }, PAGE_LEAVE_MS + 40);
    }
  
    function render(){
      ticking = false;
      const t = getLocalT(window.scrollY);    // 0..N-1 (float)
      const nearest = Math.round(t);
  
      if (nearest !== lastNearest) {
        const outgoing = cards[lastNearest];
        if (outgoing) pageLeaveLeft(outgoing);
        lastNearest = nearest;
      }
  
      // Actualizar transform de cada card (si no está en animación)
      const txFactor = vw * SPREAD_X;
      for (let i=0; i<cards.length; i++){
        const card = cards[i];
        if (animatingCards.has(card)) continue;
  
        const d = i - t;                 // distancia al foco
        const ad = Math.abs(d);
        const tx = d * txFactor;         // desplazamiento horizontal
        const s  = 1 - (1 - SCALE_MIN) * (ad > 1 ? 1 : ad); // escala lineal 0..1
        const z  = 1000 + (cards.length - Math.floor(ad * 10));
  
        card.style.transform = `translate3d(-50%, -50%, 0) translate3d(${tx}px, 0, 0) scale(${s})`;
        card.style.zIndex = z;
        // clases utilitarias por si querés estilos
        if (i === nearest) {
          card.classList.add('active'); 
        } else {
          card.classList.remove('active');
        }
        if (i < nearest) card.classList.add('past'); else card.classList.remove('past');
      }
    }
  
    function onScroll(){
      if (!ticking){
        ticking = true;
        requestAnimationFrame(render);
      }
    }
    function onResize(){
      updateMetrics();
      requestAnimationFrame(render);
    }
  
    // Eventos
    window.addEventListener('scroll', onScroll, { passive: true });
    window.addEventListener('resize', onResize, { passive: true });
  
    // Click para saltar a una card (centra esa “etapa”)
    cards.forEach((c, i) => {
      c.addEventListener('click', () => {
        const targetY = sectionTopAbs + (i * vh) - vh/2;
        window.scrollTo({ top: targetY, behavior: 'smooth' });
      }, { passive: true });
      c.addEventListener('dragstart', e => e.preventDefault());
    });
  
    // Inicial
    requestAnimationFrame(render);
  });
  </script>
  